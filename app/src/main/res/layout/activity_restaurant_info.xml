<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.android.navigatour.RestaurantInfo">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:textSize="30sp"
            android:textAlignment="center"
            android:text="Italian"
            android:fontFamily="casual"
            android:paddingBottom="8dp"
            />

        <ImageView
            android:id="@+id/bigpic"
            android:layout_width="match_parent"
            android:layout_height="240dp"
            android:scaleType="centerCrop"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:src="@drawable/michelin" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:layout_marginTop="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/smallpic1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginEnd="3dp"
                android:scaleType="centerCrop"
                android:src="@drawable/michelin"/>

            <ImageView
                android:id="@+id/smallpic2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:scaleType="centerCrop"
                android:src="@drawable/michelin" />
        </LinearLayout>

        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's the description"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's address"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="8dp"/>
        <TextView
            android:id="@+id/orderTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's the time"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/averagePrice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's the price"
            android:textSize="18sp"
            android:layout_marginLeft="8dp"
            android:paddingBottom="8dp"/>
        <TextView
            android:id="@+id/website"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Here's website"
            android:textSize="18sp"
            android:paddingBottom="8dp"
            android:layout_marginLeft="8dp"/>




    </LinearLayout>
</ScrollView>
